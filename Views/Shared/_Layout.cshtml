<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Baza Osób Zaginionych</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-brand" href="#">Lista osób Zaginionych</div>
        </div>
        <ul class="nav navbar-nav">
            <li><a class="nav-link" asp-area="" asp-controller="Persons" asp-action="Index">Lista osób zaginionych</a></li>
            @if(User.IsInRole("user")){
            <li><a class="nav-link" asp-area="" asp-controller="Persons" asp-action="Add">Zgłoś osobę zaginioną</a></li>
            }
            @if(User.IsInRole("admin")){
            <li><a class="nav-link" asp-area="" asp-controller="Persons" asp-action="Add">Zgłoś osobę zaginioną</a></li>
            }
            @if(User.IsInRole("admin")){
            <li><a href="/UserAuthentication/Logout">Logout</a></li>
            }
            @if(User.IsInRole("user")){
            <li><a href="/UserAuthentication/Logout">Logout</a></li>
            }
            @if(!User.IsInRole("user") && !User.IsInRole("admin")){
            <li><a href="/UserAuthentication/Login">Login</a></li>
            }
        </ul>
    </nav>
    
    <div class="container">
            @RenderBody()
    </div>

</body>
</html>
